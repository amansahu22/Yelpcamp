<% layout('layouts/boilerplate') -%>

<h1 class="text-center">Edit Campground</h1>

<div class="row">
  <div class="col-md-6 offset-md-3">
    <form
      action="/campgrounds/<%= foundCampground._id %>?_method=PUT"
      method="POST"
      class="needs-validation"
      novalidate
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label for="title" class="form-label">Title:</label>
        <input
          type="text"
          class="form-control"
          name="campground[title]"
          id="title"
          value="<%= foundCampground.title %> "
          required
        />
        <div class="valid-feedback">good to go</div>
      </div>
      <div class="mb-3">
        <label for="location" class="form-label">Location:</label>
        <input
          type="text"
          class="form-control"
          name="campground[location]"
          id="location"
          value="<%= foundCampground.location %> "
          required
        />
        <div class="valid-feedback">good to go</div>
      </div>

      <label for="price" class="form-label">Price:</label>
      <div class="input-group mb-3">
        <span class="input-group-text">&#8377;</span>
        <input
          type="text"
          class="form-control"
          aria-label="Amount"
          id="price"
          name="campground[price]"
          value="<%= foundCampground.price %> "
          required
        />
        <div class="valid-feedback">good to go</div>
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">Description:</label>
        <textarea
          type="text"
          class="form-control"
          name="campground[description]"
          id="description"
          required
        >
<%= foundCampground.description %>
        </textarea>
        <div class="valid-feedback">good to go</div>
      </div>

      <div class="mb-3">
        <label for="imageUrl" class="form-label">Add More Images:</label>
        <input
          type="file"
          class="form-control"
          name="image"
          id="imageUrl"
          multiple
        />
        <div class="valid-feedback">good to go</div>
      </div>
      <div class="mb-3">
        <% foundCampground.images.forEach(function(img, i) { %>
        <img src="<%=img.thumbnail %>" class="img-thumbnail mx-3" alt="" />
        <div class="form-check-inline">
          <input
            type="checkbox"
            id="image-<%=i%>"
            name="deleteImages[]"
            value="<%=img.filename%>"
          />
        </div>
        <label for="image-<%=i%>">Delete?</label>
        <% })%>
      </div>

      <div class="mb-3">
        <button class="btn btn-info" type="submit">Update campground</button>
      </div>
    </form>
    <a href="/campgrounds/<%= foundCampground._id %> ">Cancel</a>
  </div>
</div>
