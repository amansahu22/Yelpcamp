<% layout('layouts/boilerplate') -%>
<h1 class="text-center">Add Campground</h1>
<div class="row">
  <div class="col-md-6 offset-md-3">
    <form
      action="/campgrounds"
      method="POST"
      class="needs-validation"
      novalidate
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label for="title" class="form-label">Title:</label>
        <input
          type="text"
          class="form-control"
          name="campground[title]"
          id="title"
          required
        />
        <div class="valid-feedback">good to go</div>
      </div>
      <div class="mb-3">
        <label for="location" class="form-label">Location:</label>
        <input
          type="text"
          class="form-control"
          name="campground[location]"
          id="location"
          required
        />
        <div class="valid-feedback">good to go</div>
      </div>

      <label for="price" class="form-label">Price:</label>
      <div class="input-group mb-3">
        <span class="input-group-text">&#8377;</span>
        <input
          type="text"
          class="form-control"
          aria-label="Amount"
          id="price"
          name="campground[price]"
          required
        />
        <div class="valid-feedback">good to go</div>
      </div>

      <!-- <div class="mb-3">
        <label for="imageUrl" class="form-label">Image URL:</label>
        <input
          type="text"
          class="form-control"
          name="image"
          id="imageUrl"
          required
        />
        <div class="valid-feedback">good to go</div>
      </div> -->

      <div class="mb-3">
        <label for="formFileMultiple" class="form-label"
          >Upload Image(s):</label
        >
        <input
          class="form-control"
          type="file"
          id="formFileMultiple"
          multiple
          required
          name="image"
        />
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">Description:</label>
        <textarea
          type="text"
          class="form-control"
          name="campground[description]"
          id="description"
          required
        ></textarea>
        <div class="valid-feedback">good to go</div>
      </div>

      <div class="mb-3">
        <button class="btn btn-success" type="submit">add campground</button>
      </div>
    </form>
    <a href="/campgrounds">Cancel</a>
  </div>
</div>
